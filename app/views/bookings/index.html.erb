<% content_for :title, "Bookings" %>

<div class="py-12 px-6 lg:px-12">
    <div class="container mx-auto flex items-center">
        <h1 class="font-bold text-4xl">Bookings</h1>
        <%= link_to "New booking", new_booking_path,class: "rounded-md ml-auto px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
</div>
<div class="py-12 px-6 lg:px-12">
    <div class="container mx-auto">
        <div id="bookings" class="min-w-full space-y-5">
            <% if @bookings.any? %>
            <% @bookings.each do |booking| %>
            <%= render booking %>
            <% end %>
            <% else %>
            <p class="text-center my-10">No bookings found.</p>
            <% end %>
        </div>
    </div>
</div>
</div>