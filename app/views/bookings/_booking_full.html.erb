<div>
    <%= image_tag @booking.pet.image.variant(:profile), alt: @booking.pet.name, class: "w-60 h-60 rounded object-cover mb-0 mr-4" %>

    <div class="my-5">
        <p class="font-bold"><%= @booking.pet.name %></p>
    </div>
    <div class="my-5">
        <p class="font-bold">Drop off</p>
        <p><%= long_date @booking.start_date %></p>
    </div>
    <div class="my-5">
        <p class="font-bold">Pick up</p>
        <p><%= long_date @booking.end_date %></p>
    </div>
</div>