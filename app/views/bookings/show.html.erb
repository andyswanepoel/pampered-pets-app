<% content_for :title, "Showing booking" %>

<section class="py-12 px-6 lg:px-12">
    <div class="container mx-auto">
        <h1 class="font-bold text-4xl">Showing booking</h1>
    </div>
</section>

<section class="py-12 px-6 lg:px-12">
    <div class="container mx-auto">
        <%= render "booking_full" %>

        <%= link_to "Edit this booking", edit_booking_path(@booking), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        <%= link_to "Back to bookings", bookings_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        <div class="inline-block ml-2">
            <%= button_to "Cancel this booking", @booking, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",data: { turbo_confirm: "Are you sure?" } %>
        </div>
    </div>
</section>