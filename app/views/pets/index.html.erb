<% content_for :title, "Pets" %>

<div class="py-12 px-6 lg:px-12">
    <div class="container mx-auto flex items-center">
        <h1 class="font-bold text-4xl">Your pets</h1>
        <%= link_to "New pet", new_pet_path, class: "rounded-md ml-auto px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
</div>
<div class="py-12 px-6 lg:px-12">
    <div class="container mx-auto">
        <div id="pets" class="min-w-full space-y-5">
            <% if @pets.any? %>
            <%= render @pets %>
            <% else %>
            <p class="my-10">No pets found.</p>
            <% end %>
        </div>
    </div>
</div>