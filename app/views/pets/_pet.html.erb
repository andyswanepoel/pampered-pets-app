<div id="<%= dom_id pet %>" class="bg-white rounded-2xl shadow-lg overflow-hidden p-4 mt-8 flex flex-row items-center text-center text-left first:mt-0">
    <%= image_tag pet.image.variant(:thumb), alt: pet.name, class: "w-24 h-24 rounded-full mb-0 mr-4" %>
    <div class="flex flex-col grow ml-4 sm:flex-row sm:items-center sm:ml-0">
        <div class="grow">
            <h3 class="text-lg font-semibold"><%= pet.name %></h3>
            <p class="text-gray-500 text-sm">Age: <%= time_difference_in_years_and_months pet.date_of_birth %></p>
        </div>
        <div class="mt-2 sm:mt-0">
            <%= link_to "Edit", edit_pet_path(pet), class: "mt-0 px-4 py-2 text-sm font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-600 justify-self-end inline-block" %>
            <% if request.path == pets_path %>
            <%= link_to "Show", pet, class: "ml-2 sm:ml-4 mt-0 px-4 py-2 text-sm font-medium bg-gray-100 hover:bg-gray-50 rounded-lg hover:bg-blue-600 justify-self-end inline-block" %>
            <% end %>
        </div>
    </div>
</div>