<div id="<%= dom_id pet %>" class="bg-white rounded-2xl shadow-md overflow-hidden p-4 flex flex-col lg:flex-row items-center text-center lg:text-left lg:w-[48%] xl:w-[32%]">
    <%= image_tag pet.image.variant(:thumb), alt: pet.name, class: "w-24 h-24 rounded-full object-cover mb-3 lg:mb-0 lg:mr-4" %>
    <div class="flex flex-col items-center lg:grow lg:flex-row ">
        <div class="lg:grow">
            <h3 class="text-lg font-semibold"><%= pet.name %></h3>
            <p class="text-gray-500 text-sm">Age: <%= time_difference_in_years_and_months pet.date_of_birth %></p>
        </div>
        <%= link_to "Edit", edit_pet_path(pet), class: "mt-3 px-4 py-2 text-sm font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-600 lg:justify-self-end lg:mt-0" %>
    </div>
</div>